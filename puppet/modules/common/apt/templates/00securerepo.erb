# PUPPET
Acquire::https::Verify-Peer "true";
Acquire::https::Verify-Host "true";

<% if apache['SSLCACertificateFile'] != nil %>
Acquire::https::CaInfo  "<%= apache['SSLCACertificateFile'] %>";
<% else %>
Acquire::https::CaInfo  "/usr/share/ca-certificates/local/ca.pem";
<% end %>

